@page "/stkjourn_pg"
@using DigiEquipSys.Models
@using DigiEquipSys.Services
@inject NavigationManager NavigationManager
@inject ISessionStorageService sessionStorage
@inject IJSRuntime JSRuntime

<h3 class="page-title">Stock Journal </h3>
<style>
    .e-grid .e-headercelldiv {
        font-weight: bold !important;
        background-color : slateblue;
        color: white
    }
</style>
<style>
    .e-grid .e-headercelldiv {
        font-weight: bold !important;
    }
</style>
<style>
    .e-spinner-pane .e-spinner-inner .e-spin-Bootstrap4 {
        stroke: red;
    }
</style>
<SfSpinner @bind-Visible="@SpinnerVisible" Type="@SpinnerType.Bootstrap4" Size="50" Label="Data loading">
</SfSpinner>
@if (@TrVouList != null)
{
    <div class="col-lg-12 Control-section">
        <div class="content-wrapper">
            <div class="row">
                <SfGrid DataSource="@TrVouList" Toolbar="Toolbaritems" Height="600" Width="100%" AllowTextWrap="true" AllowFiltering="true" AllowSorting="true" AllowPaging="true" AllowResizing="true" AllowReordering="true" AllowExcelExport="true">
                    <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.CheckBox"></GridFilterSettings>
                    <GridPageSettings PageSize="100" PageSizes="@(new int[] { 50, 100, 200, 400,500})"></GridPageSettings>
                    <GridEvents RowSelected="RowSelectHandler" OnToolbarClick="ToolbarClickHandler" TValue="TrHead"></GridEvents>
                    <GridColumns>
                        <GridColumn Field="@nameof(TrHead.TrhId)"
                                    HeaderText="Id"
                                    IsIdentity="true"
                                    IsPrimaryKey="true"
                                    Visible="false">
                        </GridColumn>

                        <GridColumn Field="@nameof(TrHead.TrhNo)"
                                    HeaderText="Journal Id"
                                    TextAlign="@TextAlign.Left"
                                    Width="40">
                        </GridColumn>
                        <GridColumn Field="@nameof(TrHead.TrhDispNo)"
                                    HeaderText="Journal No"
                                    TextAlign="@TextAlign.Left"
                                    Width="40">
                        </GridColumn>
                        <GridColumn Field="@nameof(TrHead.TrhDate)"
                                    HeaderText="Journal Date"
                                    Format="d"
                                    Type="ColumnType.Date"
                                    TextAlign="@TextAlign.Center"
                                    Width="50">
                        </GridColumn>

                        <GridColumn Field="@nameof(TrHead.TrhApproved)"
                                    HeaderText="Approved"
                                    TextAlign="@TextAlign.Center"
                                    Width="30">
                            <Template>
                                @{
                                    var grn = context as TrHead;
                                    <span style="color: blue; font-weight: bold; font-style:normal; ">
                                        @(grn?.TrhApproved == true ? "Yes" : "No")
                                    </span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(TrHead.TrhRemarks)"
                                    HeaderText="Remarks"
                                    TextAlign="@TextAlign.Left"
                                    Width="75">
                        </GridColumn>
                    </GridColumns>
                </SfGrid>
                <WarningPage @ref="Warning" WarningHeaderMessage="@WarningHeaderMessage" WarningContentMessage="@WarningContentMessage" />
            </div>
        </div>
    </div>
    <div class="e-footer-content">
        <br />
        <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
            <a href="#" @onclick="NavigateToPrevious" CssClass="e-link">
                <SfButton CssClass="e-small e-success">BACK</SfButton>
            </a>
        </div>
    </div>
}