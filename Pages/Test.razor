@page "/test"
@using Syncfusion.Blazor.Calendars
<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Check-in and Check-out</label>
        <SfDateRangePicker TValue="DateTime?" Placeholder="Choose a Date Range" FullScreen="true" ShowClearButton="true" Width="250px" @bind-StartDate="@selectedRange.selectedRangeFrom" 
                           @bind-EndDate="@selectedRange.selectedRangeTo">
            <DateRangePickerEvents TValue="DateTime?" ValueChange="ValueChangeHandler"></DateRangePickerEvents>
        </SfDateRangePicker>
    </div>
</div>
<style>
    .control-wrapper {
        max-width: 300px;
        margin: 0 auto;
        padding: 40px 0px 0px;
        visibility:hidden;
    }
    .example-label {
        font-size: 14px;
        margin-bottom: 6px;
        visibility:hidden;
    }
</style>
@code {

    public class DateRange
    {
        public DateTime? selectedRangeFrom { get; set; }
        public DateTime? selectedRangeTo { get; set; }
    }

    private DateRange selectedRange { get; set; } = new DateRange();

    protected override async Task OnInitializedAsync()
    {
        selectedRange.selectedRangeFrom = new DateTime(2022,01,01);
        selectedRange.selectedRangeTo = new DateTime(2022, 12, 31);
    }
    public void ValueChangeHandler(RangePickerEventArgs<DateTime?> args)
    {
        selectedRange.selectedRangeFrom = args.StartDate.Value;
        selectedRange.selectedRangeTo = args.EndDate.Value;
    }
    
}