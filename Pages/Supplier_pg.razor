@page "/supplier_pg/{vhref}/{vCompType}"
@page "/supplier_pg/{vhref}"
@page "/supplier_pg"
@using DigiEquipSys.Models
@using DigiEquipSys.Services
@using Syncfusion.Blazor.Buttons
@inject NavigationManager UriHelper
@inject ISessionStorageService sessionStorage
@inject IJSRuntime JSRuntime
@inject ZohoTokenService ZohoTokenService
@inject ZohoApiService ZohoService

<h3 class="page-title">Suppliers</h3>
<style>
    .e-grid .e-headercelldiv {
        font-weight: bold !important;
        background-color: #604B7C;
        color: white
    }
</style>
<style>
    .e-spinner-pane .e-spinner-inner .e-spin-Bootstrap4 {
        stroke: red;
    }
</style>
<style>
    .dialog-header {
        font-size: 1.0rem;
        font-weight: bold;
        margin-bottom: 4px;
        color: #333;
    }
</style>
<SfSpinner @bind-Visible="@SpinnerVisible" Type="@SpinnerType.Bootstrap4" Size="50" Label="Data loading">
</SfSpinner>
<button @onclick="ConnectToZoho">Connect to Zoho</button>


@if (SupplierList != null)
{
    <div class="col-lg-12 Control-section">
        <div class="content-wrapper">
            <div class="Control-wrapper">
                <SfGrid  @ref="SupplierGrid" DataSource="@SupplierList"
                        AllowSorting="true" AllowFiltering="true" AllowPaging="true" AllowResizing="true" AllowReordering="true" 
                        ContextMenuItems="@(new List<object>() { "AutoFit", "AutoFitAll", "SortAscending", "SortDescending", "Copy", "ExcelExport", "CsvExport", "FirstPage", "PrevPage", "LastPage", "NextPage" })"
                        Toolbar="ToolbarItems">
                    <GridEvents OnDataBound="DataBoundHandler" OnActionBegin="ActionBeginHandler" RowSelected="RowSelectHandler" TValue="SupplierMaster" OnToolbarClick="ToolbarClickHandler"></GridEvents>
                    <GridPageSettings PageSize="20" PageSizes="@(new int[] {20, 30, 50, 100, 200, 400,500})"></GridPageSettings>
                    <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.CheckBox"></GridFilterSettings>
                    <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true" Mode="EditMode.Normal" NewRowPosition="NewRowPosition.Bottom"></GridEditSettings>
                    <GridTemplates>
                        <EmptyRecordTemplate>
                            <span>Custom no record message</span>
                        </EmptyRecordTemplate>
                    </GridTemplates>
                    <GridColumns>

                        <GridColumn Field="@nameof(SupplierMaster.SuppId)"
                                    HeaderText="Id"
                                    IsIdentity="true"
                                    IsPrimaryKey="true"
                                    Visible="false">
                        </GridColumn>

                        <GridColumn Field="@nameof(SupplierMaster.SuppCode)"
                                    HeaderText="Code"
                                    Width="100"
                                    AllowEditing="false">
                            <Template>
                                @{
                                    var data = (context as SupplierMaster);
                                }
                                <SfTooltip Content="Don't Enter in this Fields (Auto Numbering)">
                                    <span>@data.SuppCode</span>
                                </SfTooltip>
                            </Template>
                            <EditTemplate>
                                @{
                                    var data = (context as SupplierMaster);
                                }
                                <SfTooltip Content="Don't Enter in this Fields (Auto Numbering)">
                                    <span>@data.SuppCode</span>
                                </SfTooltip>
                            </EditTemplate>
                        </GridColumn>

                        <GridColumn Field="@nameof(SupplierMaster.SuppName)"
                                    HeaderText="Supplier Name"
                                Width="250">
                        </GridColumn>
                        <GridColumn Field="@nameof(SupplierMaster.SuppContPerson)"
                                    HeaderText="Contact Person"
                                    AllowFiltering="true"
                                    Width="200">
                        </GridColumn>
                        <GridColumn Field="@nameof(SupplierMaster.SuppPhone)"
                                    HeaderText="Mobile Number"
                                    AllowFiltering="true"
                                    Width="200">
                        </GridColumn>
                        <GridColumn Field="@nameof(SupplierMaster.SuppEMail)"
                                    HeaderText="eMail"
                                    AllowFiltering="true"
                                    Width="250">
                        </GridColumn>
                        <GridColumn Field="@nameof(SupplierMaster.SuppZohoVendId)"
                                    HeaderText="Zoho Vendor Id"
                                    AllowFiltering="true" AllowEditing="false"
                                    Width="200">
                        </GridColumn>
                        <GridColumn>
                            <Template>
                                @{
                                var adet = (context as SupplierMaster);
                                <div>
                                    <SfButton @onclick="@((args) => Navigate(adet.SuppCode))" IsPrimary="true" IconPosition=@IconPosition.Left>Detail</SfButton>
                                </div>
                                }
                            </Template>
                        </GridColumn>
                    </GridColumns>
                </SfGrid>
                <WarningPage @ref="Warning" WarningHeaderMessage="@WarningHeaderMessage" WarningContentMessage="@WarningContentMessage" />
                <ConfirmPage @ref="DialogDelete" ConfirmHeaderMessage="@ConfirmHeaderMessage" ConfirmContentMessage="@ConfirmContentMessage" ConfirmationChanged="ConfirmDelete" />
                <a href="#" @onclick="NavigateToPrevious" CssClass="e-link">
                    <SfButton CssClass="e-small e-success">BACK</SfButton>
                </a>
                @*<div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                    <SfButton @onclick="@((args) => NavigateToPrevious())" IsPrimary="true" IconPosition=@IconPosition.Left>Back</SfButton>
                </div>*@
            </div>
            <SfDialog @ref="DialogSuppliersAddEdit" IsModal="true" Width="600px" ShowCloseIcon="true" Visible="false">
                <DialogTemplates>
                    <Header>Supplier Details</Header>
                </DialogTemplates>
                <EditForm Model="@suppliersaddedit" OnValidSubmit="@SuppliersSave">
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier Name</h4>
                        <SfTextBox Enabled="false" Placeholder="Supplier Name"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppName">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Contact Person</h4>
                        <SfTextBox Enabled="true" Placeholder="Contact Person"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppContPerson">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Select Country</h4>

                        <SfDropDownList DataSource="@countryList" AllowFiltering="true"
                                        TItem="GenCountry"
                                        TValue="string"
                                        Text="Country"
                                        @bind-Value="suppliersaddedit.SuppCountry"
                                        Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Auto"
                                        Placeholder="Select Country"
                                        Enabled="true">
                            <DropDownListFieldSettings Text="CountryName" Value="CountryCode"></DropDownListFieldSettings>
                            <DropDownListEvents TItem="GenCountry" TValue="string" OnValueSelect="OnChangeCountry"></DropDownListEvents>
                        </SfDropDownList>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Select City</h4>
                        <SfDropDownList DataSource="@cityList" AllowFiltering="true"
                                        TItem="GenCity"
                                        TValue="string"
                                        Text="City"
                                        @bind-Value="suppliersaddedit.SuppCity"
                                        Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Auto"
                                        Placeholder="Select City"
                                        Enabled="true">
                            <DropDownListFieldSettings Text="CityName" Value="CityCode"></DropDownListFieldSettings>
                        </SfDropDownList>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier Address</h4>
                        <SfTextBox Enabled="true" Placeholder="Supplier Address"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppAddr">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier Tel</h4>
                        <SfTextBox Enabled="false" Placeholder="Supplier Tel"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppPhone">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier Email</h4>
                        <SfTextBox Enabled="true" Placeholder="Supplier Email"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppEMail">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier Url</h4>
                        <SfTextBox Enabled="true" Placeholder="Supplier Url"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppUrl">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Supplier CR</h4>
                        <SfTextBox Enabled="true" Placeholder="Supplier CR"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppCrNo">
                        </SfTextBox>
                    </div>
                    <div class="sftextbox-header">
                        <h4 class="dialog-header">Remarks</h4>
                        <SfTextBox Enabled="true" Placeholder="Remarks"
                                   Syncfusion.Blazor.Inputs.FloatLabelType="@Syncfusion.Blazor.Inputs.FloatLabelType.Always"
                                   @bind-Value="suppliersaddedit.SuppRemarks">
                        </SfTextBox>
                    </div>
                    <br />
                    <div class="e-footer-content" style="text-align: right; width: 100%;">
                        <div class="button-container">
                            <button type="submit" disabled style="display: none" aria-hidden="true"></button>
                            <button type="submit" class="e-btn e-normal e-primary">Save</button>
                            <button type="button" class="e-btn e-normal" @onclick="@CloseDialog">Close</button>
                        </div>
                    </div>
                </EditForm>
            </SfDialog>
        </div>
    </div>
}